{
    "compilerOptions":
      {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
          "*": ["node_modules/*"]
        }
      },
    "include": ["src/**/*.ts"],
    "exclude": [
      "./tests/",
      "./node_modules/",
      "./dist/"
    ]
  }